{% assign related_collections = collection.metafields.custom['related-collections'].value %}
<style>
  .related-collections {
    width: 100%;
    padding: 20px 5px;
  }

  .link-list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .link-list::-webkit-scrollbar {
    display: none;
  }

  .link-list-wrapper {
    display: flex;
    justify-content: flex-start;
    width: 100%;
  }

  @media (min-width: 0px) {
    .link-list-wrapper {
      justify-content: center;
    }

    .link-list:not(:only-child) {
      justify-content: flex-start;
    }
  }

  .link-list li {
    flex: 0 0 auto;
    text-align: center;
    width: 120px;
  }

  .collection-image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 10px;
    border: 2px solid #f4f4f4;
  }

  .related-link-title {
    color: #121212;
    text-decoration: none;
    display: block;
    text-align: center;
    margin: 0;
    padding: 0;
    text-underline-offset: 2px;
    font-size: 12px;
  }

  .collection-link {
    text-decoration: none;
  }
</style>

<div class="related-collections">
  <div class="link-list-wrapper">
    <ul class="link-list">
      {% for collection in related_collections %}
        {% assign product_image = collection.products.first.images.first %}
        <li>
          <a href="{{ collection.url }}" class="collection-link">
            <img
              src="{% if collection.image == blank %}{{ product_image | img_url: '200x200', crop: 'center' }}{% else %}{{ collection.image | img_url: '200x200', crop: 'center' }}{% endif %}"
              alt="{{ collection.title }}"
              class="collection-image"
              width="100"
              height="100"
            >
            <span class="related-link-title"
              ><label class="h6">{{ collection.title }}</label></span
            >
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
